package com.bit.day15;

class MyArray{
	private Object[] target;
	
	public MyArray() {
		target=new Object[0];
	}
	
	//입력
	public void add(Object a){
		Object[] old=target;
		target=new Object[target.length+1];
		for(int i=0; i<old.length; i++){
			target[i]=old[i];
		}
		target[target.length-1]=a;
	}
	
	// 사이즈
	public int size(){
		return target.length;
	}
	
	//출력
	public Object get(int idx){
		return target[idx];
	}
	// 지우기
	public void remove(int idx){
		Object[] old=target;
		target=new Object[old.length-1];
		System.arraycopy(old, 0, target, 0, idx);
		int leng=old.length-(idx+1);
		if(leng>0){
			System.arraycopy(old, idx+1, target, idx, leng);
		}
	}
	
}

public class Ex06 {

	public static void main(String[] args) {
		MyArray arr1=new MyArray();
		arr1.add(1234);
		arr1.add(3.14);
		arr1.add("문자열");
		arr1.add(false);
		arr1.add('$');
		
		arr1.remove(2);
		
		for(int i=0; i<arr1.size(); i++){
			System.out.println(arr1.get(i));
		}
		
	}

}




















