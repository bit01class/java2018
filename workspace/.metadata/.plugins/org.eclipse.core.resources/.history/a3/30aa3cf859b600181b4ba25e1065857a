package com.bit.day09;
/*
---------------------------------
가위, 바위, 보 게임 (ver 0.0.1)
---------------------------------
1.가위 2.바위 3.보 0.종료>>1
com:가위, you:가위
비겼습니다

1.가위 2.바위 3.보 0.종료>>2
com:보, you:바위
졌습니다

1.가위 2.바위 3.보 0.종료>>1
com:보, you:가위
이겼습니다

1.가위 2.바위 3.보 0.종료>>1
com:바위, you:가위
졌습니다

1.가위 2.바위 3.보 0.종료>>0
결과 : 1승 1무 2패

*/
public class Game01 {


	public static void main(String[] args) {
		int a,b,c;
		a=0; b=0; c=0;
		String title="---------------------------------\n"
						+"가위, 바위, 보 게임 (ver 0.0.1)\n"
						+"---------------------------------";
		String menu="1.가위 2.바위 3.보 0.종료>>";
		java.util.Scanner sc = new java.util.Scanner(System.in);
		
		System.out.println(title);
		
		while(true){
			System.out.print(menu);
			int input=sc.nextInt();
			if(input==0){break;}
			//결과처리
			//입력에 따른 결과
			//난수에 따른 결과
			int ran=0;
			while(!(ran>=1&&ran<4)){
				ran=(int)(Math.random()*10)+1;// 0.0+1 <= <10.0+1 // 1~3
			}
			// ran=1~3
			if(ran==1){
				System.out.print("com:가위 ,");
			}else if(ran==2){
				System.out.print("com:바위 ,");
			}else if(ran==3){
				System.out.print("com:보 ,");
			}
			///
			if(input==1){
				System.out.println("you:가위");
			}else if(input==2){
				System.out.println("you:바위");
			}else if(input==3){
				System.out.println("you:보");
			}
			/// 승패
			if(ran==input){
				System.out.println("비겼습니다");
				b++;
			}else if((input==1&&ran==3)
					||(input==2&&ran==1)
					||(input==3&&ran==2)){
				System.out.println("이겼다");
				a++;
			}else{
				System.out.println("졌음");
				c++;
			}
			
		}
		System.out.println("결과 : "+a+"승 "+b+"무 "+c+"패");
	}

}
















